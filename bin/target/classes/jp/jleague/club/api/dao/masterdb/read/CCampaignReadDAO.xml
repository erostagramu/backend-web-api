<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.jleague.club.api.dao.masterdb.read.CCampaignReadDAO">
	<resultMap type="jp.jleague.club.api.dao.masterdb.dto.CCampaignDTO" id="dto">
		<result property="approveHideBannerFlg" column="approve_hide_banner_flg"/>
	</resultMap>
	
	<select id="findBy" resultMap="dto" >
		SELECT
			approve_hide_banner_flg
		FROM
			c_campaign
		WHERE
			config_type = #{type}
		;
	</select>
</mapper> 
