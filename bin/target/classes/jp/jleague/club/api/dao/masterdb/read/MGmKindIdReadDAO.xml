<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.jleague.club.api.dao.masterdb.read.MGmKindIdReadDAO">

	<resultMap type="jp.jleague.club.api.dao.masterdb.dto.MGmKindIdDTO" id="MGmKindIdDTO">
		<result column="game_kind_id" property="gameKindId" javaType="java.lang.Integer" />
		<result column="game_kind_code" property="gameKindCode" javaType="java.lang.String" />
		<result column="game_kind_name" property="gameKindName" javaType="java.lang.String" />
		<result column="game_kind_name_en" property="gameKindNameEn" javaType="java.lang.String" />
		<result column="game_kind_name_roughly" property="gameKindNameRoughly" javaType="java.lang.String" />
		<result column="regist_datetime" property="registDatetime" javaType="java.util.Date" />
	</resultMap>

	<select id="selectAllOrderById" resultMap="MGmKindIdDTO">
		select game_kind_id ,
		       game_kind_name ,
		       game_kind_name_en ,
		       game_kind_name_roughly ,
		       regist_datetime
		from m_gm_kind_id
        order by game_kind_id
	</select>

	<select id="selectByGameKindId" resultMap="MGmKindIdDTO" parameterType="jp.jleague.club.api.dao.masterdb.dto.MGmKindIdDTO">
		select game_kind_id ,
		       game_kind_code ,
		       game_kind_name ,
		       game_kind_name_en ,
		       game_kind_name_roughly ,
		       regist_datetime
		from m_gm_kind_id
		where game_kind_id = #{gameKindId}
	</select>
	
	<select id="selectByGameKindIdList" resultMap="MGmKindIdDTO" parameterType="java.util.List">
		select game_kind_id ,
		       game_kind_name ,
		       game_kind_name_en ,
		       game_kind_name_roughly ,
		       regist_datetime
		  from m_gm_kind_id
		<if test="list != null">
			where game_kind_id in 
			<foreach item="item" collection="list" open="(" separator="," close=")">
				#{item}
			</foreach>
		</if>
	</select>
</mapper> 
