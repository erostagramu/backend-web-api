<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        ">

	<import resource="classpath:jp/jleague/spring-infra.xml"/>
	<import resource="classpath:jp/jleague/spring-application.xml"/>

	<context:component-scan base-package="jp.jleague.club.api.controller" />
	<mvc:annotation-driven />
	<mvc:cors>
		<mvc:mapping path="/api/**" allowed-origins="https://club.jleague.jp, https://contents.club.jleague.jp, https://club-stg.jleague.jp, https://contents.club-stg.jleague.jp, https://aahu-stg.team-lab.com, https://contents.aahu-stg.team-lab.com, http://localhost:8080" />
	</mvc:cors>
	<mvc:interceptors>
		<bean class="jp.jleague.club.api.commons.maintenance.MaintenanceInterceptor" />
		<bean class="jp.jleague.club.api.commons.version.VersionInfoInterceptor" />
		<bean class="jp.jleague.club.api.commons.curtime.SetCurrentDateInterceptor" />
		<bean class="jp.jleague.club.api.commons.security.SecurityInterceptor" />
	</mvc:interceptors>

</beans>